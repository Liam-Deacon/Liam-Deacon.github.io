                                </ul>
                            </div>

                            <div style="padding-bottom: 10px;" id="skills">
                                <div class="row">
                                    <div class="col-md-7 col-7">
                                        <h5 class="font-size24 sm-font-size22 xs-font-size20">Professional Skills & Experience</h5>
                                    </div>
                                    <div class="col-md-5 col-5">
                                        <input type="text" class="fuzzy-search" placeholder="Filter Skills">
                                    </div>
                                </div>
                                <ul class="list">
                                    {%- for skill in data.profile.skill_tags -%}
                                    <li><button class="skill-tag" data-html="true" data-placement="bottom" data-toggle="popover" title="<b>{{ skill.title | safe }}</b>" data-content="{{ skill.popover.image | safe }}{{ skill.popover.description | safe }}">{{ skill.title | safe }}</button></li>
                                    {% endfor %}<br>
                                </ul>
                            </div>
                        </div>
                    </div> <!-- Should this be here? -->
                    <div class="col-md-12">
                        {% set stars = {"1": 0, "2": 35, "3": 70, "4": 95, "5": 114} %}
                        {%- for lang in data.profile.languages -%}
                        <!-- {{ lang.name }} -->
                        <span class="fa-stack fa-2x lang-pic" data-toggle="tooltip" data-placement="right" data-html="true"
                              title="{{ lang.name | safe }} Skill Level<br><b>{{ lang.skill_level | safe }}</b><br>{{ lang.skill_badge | safe }}">
                            <div class="lang-pic-box">
                                {{ lang.logo | safe }}
                                {%- for i_star, offset in stars -%}{% set i_star = i_star | int %}
                                <i class="{% if i_star > lang.rating %}no-fill-star {% endif %}fa fa-star fa-stack-1x fa-sm" style="padding-left:{{ offset }}%;"></i>
                                {% endfor %}
