<section>
    <div id="contact">
        <div class="container contact-form">
            <div class="contact-image">
                <img src="https://www.svgrepo.com/show/112907/speech-bubbles.svg" alt="" />
            </div>
            <!-- NOTE: use https://formspree.io to handle contact as site is static -->
            <form method="post" action="{{ data.contact.formspree_url | safe }}">
                <h3>Drop me a line</h3>
                <div class="team-single-icons-alt row text-center">
                    <ul class="no-margin">
                        <li><a href="tel://+44{{ data.common.phone }}"><i class="fas fa-mobile-alt"></i></a></li>
                        <li><a href="https://linkedin.com/in/{{ data.common.linkedin_id }}"><i class="fab fa-linkedin"></i></a></li>
                        <li><a href="mailto://{{ data.common.email }}"><i class="fas fa-envelope"></i></a></li>
                        <li><a href="https://api.whatsapp.com/send?phone={{ data.common.phone }}&text=Hi%20{{ data.common.name }}"><i class="fab fa-whatsapp"></i></a></li>
                        <li><a href="https://join.skype.com/invite/{{ data.common.skype_invite }}"><i class="fab fa-skype"></i></a></li>
                    </ul>
                    <br>
                    <br>
                    <br>
                </div>
                <br> <!-- FIXME: remove and use css instead -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Your Name *" value="" required/>
                        </div>
                        <div class="form-group"> <!-- NOTE: hidden (so subject is fixed) - change type -> "text" to allow user editing -->
                            <input type="hidden" name="_subject" class="form-control" placeholder="Subject" value="Profile Page Contact" />
                        </div>
                        <div class="form-group">
                            <input type="text" name="_replyto" class="form-control" placeholder="Your Email *" value="" required/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" class="form-control" placeholder="Your Phone Number *" value="" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea name="message" class="form-control" placeholder="Your Message *" required></textarea>
                        </div>
                    </div>
                    <div class="col-md-6" style="margin-right: 0px">
                        <div class="form-group">
                            <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" onclick="$('#submitConfirmatio').hidden = false;" />
                        </div>
                        <br>
                        <span id="submitConfirmation" class="submit-confirmation" hidden>Email sent - thanks!</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section> <!-- sections -->
