<!-- Portfolio Section-->
<section class="page-section portfolio" id="projects">
    <div class="container">
        <!-- Portfolio Section Heading-->
        <h1 class="headline page-section-heading text-center text-uppercase text-secondary mb-0">Portfolio</h1>
        
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon text-center">***</i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Portfolio Grid Items-->
        <div class="row">
            {%- for project in data.portfolio.projects -%}
            <!-- Portfolio Item{{ loop.index }}: {{ project.name }} --> 
            <div class="col-md-6 col-lg-4 mb-5">
                <div class="portfolio-item mx-auto" data-toggle="modal" data-target="#portfolioModal{{ project.name | capitalize }}">
                    <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                        <div class="portfolio-item-caption-content text-center text-white"><i class="fas fa-plus fa-3x"></i></div>
                    </div>
                    <img class="img-fluid" src="{{ project.image }}" alt="" />
                </div>
            </div>
            {% endfor %}
        </div>
    </div> <!-- container -->
</section> <!-- Portfolio -->